<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:id="@+id/latText"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/lonText"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/latText"
        android:layout_alignParentLeft="true"
        android:textSize="25dp"
        />

    <Button
    android:id="@+id/getLoc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/lonText"
    android:text="Get Location"/>

    <Button
        android:id="@+id/getPlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/getLoc"
        android:text="Get Places"/>

    <TextView
        android:id="@+id/placesText"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/getPlaces"
        android:layout_alignParentLeft="true"
        />

</RelativeLayout>

